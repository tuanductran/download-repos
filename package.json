{
  "name": "download-repos",
  "version": "1.0.0",
  "description": "A Node.js application to download repositories from GitHub.",
  "main": "index.js",
  "bin": "index.js",
  "scripts": {
    "build": "pkg . --out-path build --no-bytecode",
    "clear": "rimraf build"
  },
  "keywords": [
    "nodejs",
    "github",
    "repository",
    "download",
    "json",
    "xlsx",
    "csv",
    "cli",
    "pkg"
  ],
  "author": "Tuan Duc Tran",
  "license": "MIT",
  "pkg": {
    "targets": [
      "node18-linux-x64",
      "node18-macos-x64",
      "node18-win-x64"
    ],
    "assets": [
      "json/**/*"
    ]
  },
  "dependencies": {
    "rimraf": "^6.0.0",
    "xlsx": "^0.18.5"
  }
}
