{
  "name": "download-repos",
  "version": "1.0.0",
  "description": "A Node.js application to download repositories from GitHub.",
  "main": "index.js",
  "bin": "index.js",
  "packageManager": "pnpm@10.28.1",
  "scripts": {
    "build": "pkg . --out-path build --no-bytecode",
    "clear": "rimraf build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "nodejs",
    "github",
    "repository",
    "download",
    "json",
    "xlsx",
    "csv",
    "cli",
    "pkg"
  ],
  "author": "Tuan Duc Tran",
  "license": "MIT",
  "pkg": {
    "targets": [
      "node18-linux-x64",
      "node18-macos-x64",
      "node18-win-x64"
    ],
    "assets": [
      "logs/**/*",
      "temp/**/*",
      "json/**/*"
    ]
  },
  "dependencies": {
    "rimraf": "^6.1.2",
    "xlsx": "npm:@e965/xlsx@^0.20.3"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "jest": "^30.2.0"
  }
}
